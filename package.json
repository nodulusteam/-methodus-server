{
    "name": "@methodus/dev",
    "version": "6.0.0-alpha",
    "private": true,
    "description": "Server components for @methodus workflow",
    "directories": {
        "test": "tests",
        "examples": "examples"
    },
    "keywords": [
        "methodus",
        "unified application framework",
        "microservice",
        "rpc",
        "eventsourcing",
        "agnostic",
        "independent",
        "framework",
        "typescript",
        "bind",
        "application"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodulusteam/methodus.dev"
    },
    "scripts": {
        "clean": "rm -rf ./modules/*/yarn.lock && rm -rf ./modules/*/node_modules && rm -rf ./modules/*/dist && rm -rf ./modules/*/lib",
        "build": "lerna run build",
        "build:additionals": "lerna run build",
        "bootstrap": "lerna bootstrap && lerna link",
        "watch": "rimraf ./lib && tsc -w",
        "tslint": "tslint -c tslint.json 'src/**/*.ts'",
        "pretest": "[ -d coverage ] || mkdir coverage",
        "test": "lerna run test --loglevel=silly --concurrency=1&& yarn merge",
        "test:full": "jest --verbose --coverage",
        "merge": "node ./mapCoverage.js",
        "publish-diff": "lerna publish from-package",
        "doc": "docsify serve docs",
        "docs": "lerna run docs",
        "docsweb": "cross-env NODE_OPTIONS=--max_old_space_size=8192 typedoc --mode modules --out docs/documentation ./",
        "sonar": "sonar-scanner.bat -Dsonar.projectKey=nodulusteam_-methodus-server -Dsonar.organization=nodulusteam-github -Dsonar.sources=. -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=e01e7adc2647251c0651a3bab28de27b479b4432",
        "cov": "rimraf output && npm run test"
    },
    "author": "NodulusTeam",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@methodus/data": "^2.0.0",
        "@types/jest": "^24.0.23",
        "@types/mongodb": "^3.5.23",
        "@types/node": "^10.0.0",
        "@types/uuid": "^3.4.4",
        "child-process-debug": "0.0.7",
        "cross-env": "^7.0.2",
        "docsify": "^4.10.2",
        "istanbul-api": "^3.0.0",
        "istanbul-lib-coverage": "^3.0.0",
        "istanbul-lib-report": "^3.0.0",
        "istanbul-reports": "^3.0.2",
        "jest": "^24.9.0",
        "lerna": "^3.22.1",
        "memory-streams": "^0.1.3",
        "mkdirp": "^0.5.1",
        "nedb": "^1.8.0",
        "nedb-promise": "^2.0.1",
        "npm-run-all": "^4.1.5",
        "opn-cli": "^4.0.0",
        "rimraf": "^3.0.0",
        "standard-version": "^4.4.0",
        "ts-jest": "^24.2.0",
        "tslint": "^5.11.0",
        "typedoc": "^0.17.7",
        "typedoc-plugin-markdown": "^1.2.0",
        "typescript": "^3.9.5"
    },
    "dependencies": {}
}
