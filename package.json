{
    "name": "@methodus/dev",
    "version": "7.0.2",
    "private": true,
    "description": "Methodus - agnostic framework for node",
    "keywords": [
        "methodus",
        "unified application framework",
        "microservice",
        "rpc",
        "eventsourcing",
        "agnostic",
        "independent",
        "framework",
        "typescript",
        "bind",
        "application"
    ],
    "homepage": "https://methodus.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/nodulusteam/methodus.dev"
    },
    "author": "NodulusTeam",
    "license": "BSD-3-Clause",
    "workspaces": [
        "modules/framework/*",
        "modules/platform/*",
        "modules/tests/*",
        "modules/tools/*",
        "modules/extras/*",
        "!modules/tools/methodus-cli/sandbox/*"
    ],
    "resolutions": {
        "acorn": "^6.2.1",
        "@types/mousetrap": "1.6.3",
        "clone": "2.1.2",
        "underscore.string": "3.3.5"
    },
    "scripts": {
        "ci:build": "yarn && yarn run-s build test:all coverage build:additionals docs",
        "clean": "yarn rimraf ./modules/**/**/dist && yarn rimraf ./modules/**/**/coverage",
        "build": "yarn lerna run build",
        "build:additionals": "lerna run build:additionals",
        "tslint": "yarn tslint -c tslint.json 'src/**/*.ts'",
        "pretest": "[ -d coverage ] || mkdir coverage",
        "test": "yarn workspaces foreach -ptv run test",
        "test:all": "yarn run test && yarn run test:integrations && yarn run test:contracts && yarn run test:cli && yarn run coverage",
        "test:cli": "yarn workspaces foreach -ptv run test:cli",
        "test:integrations": "yarn workspaces foreach -ptv run test:integrations",
        "test:contracts": "yarn workspaces foreach -ptv run test:contracts",
        "mutation": "yarn workspaces foreach -ptv run mutation",
        "coverage": "node ./coverage.js",
        "bump": "lerna version patch --no-push",
        "publish-ci": "yarn commit-version | exit 0 && lerna publish from-package -y --no-verify-access ",
        "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
        "release": "lerna publish from-package",
        "changelog": "auto-changelog --template changelog-template.hbs -p -u --commit-limit false",
        "changelog-debug": "auto-changelog --template changelog-template.hbs -p --template json --output changelog-data.json",
        "docs:serve": "docsify serve ./docs",
        "docs": "yarn workspaces foreach -ptv run docs",
        "docsweb": "cross-env NODE_OPTIONS=--max_old_space_size=8192 typedoc --mode modules --out docs/documentation ./",
        "sonar": "sonar-scanner.bat -Dsonar.projectKey=nodulusteam_-methodus -Dsonar.organization=nodulusteam-github -Dsonar.sources=. -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=e01e7adc2647251c0651a3bab28de27b479b4432"
    },
    "devDependencies": {
        "@methodus/data": "^2.0.0",
        "@monorepo-utils/collect-changelog": "^2.2.0",
        "@types/jest": "^26.0.15",
        "@types/mongodb": "^3.5.23",
        "@types/node": "^10.0.0",
        "@types/uuid": "^3.4.4",
        "auto-changelog": "^2.2.1",
        "child-process-debug": "0.0.7",
        "commitizen": "^4.1.2",
        "cross-env": "^7.0.2",
        "docsify": "^4.10.2",
        "istanbul-api": "^3.0.0",
        "istanbul-lib-coverage": "^3.0.0",
        "istanbul-lib-report": "^3.0.0",
        "istanbul-reports": "^3.0.2",
        "jest": "^26.6.3",
        "jest-html-reporters": "^2.1.0",
        "lerna": "^3.22.1",
        "lerna-semantic-release": "^9.1.0",
        "memory-streams": "^0.1.3",
        "mkdirp": "^0.5.1",
        "nedb": "^1.8.0",
        "nedb-promise": "^2.0.1",
        "npm-run-all": "^4.1.5",
        "opn-cli": "^4.0.0",
        "prettier": "^2.0.5",
        "replace-in-file": "^6.1.0",
        "rimraf": "^3.0.1",
        "semantic-release": "^17.1.2",
        "standard-version": "^8.0.1",
        "ts-jest": "^26.4.4",
        "tslint": "^5.11.0",
        "typedoc": "^0.17.8",
        "typedoc-plugin-markdown": "^2.3.1",
        "typescript": "^4.1.2"
    },
    "dependenciesMeta": {
        "jest-html-reporters@2.1.0": {
            "unplugged": true
        },
        "ts-morph@8.1.2": {
            "unplugged": true
        }
    }
}
