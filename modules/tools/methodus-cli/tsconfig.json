{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es5",
        "lib": ["ES2017"],
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false
    },
    "typedocOptions": {
        "exclude": "**/*+(index|.spec|.e2e).ts,tests",
        "module": "commonjs",
        "excludeExternals": "true",
        "excludeNotExported": "true",
        "target": "commonjs",
        "includeDeclarations": "false",
        "mode": "file",
        "baseUrl": "modules/tools/cli",
        "name": "Methodus - tools/cli",
        "readme": "readme.md",
        "out": "../../../docs/modules/tools/cli",
        "theme": "markdown"
    },
    "exclude": ["node_modules", "dist", "sandbox", "templates"]
}
