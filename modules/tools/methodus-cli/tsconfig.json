{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es5",
        "lib": ["ES2017"],
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false
    },
    "typedocOptions": {
        "theme": "markdown",
        "excludeExternals": "true",
        "excludeNotExported": "true",
        "target": "commonjs",
        "includeDeclarations": "true",
        "mode": "module",
        "name": "A Methodus guide",
        "readme": "none",
        "out": "../../docs/modules/tools/cli",
        "exclude": "tests"
    },
    "exclude": ["node_modules", "dist", "sandbox", "templates"]
}
